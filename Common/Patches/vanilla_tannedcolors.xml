<?xml version="1.0" encoding="utf-8" ?>
<Patch>

<!-- furs have no tannedcolor because they retain the color of the animal's fur -->
<!-- leathers have shades of brown to represent the color change from skin to leather -->
<!-- these are mixed with the color of the animal in various ratios -->
<!-- so that the leather color still reflects the color of the animal, but less vibrant than in life -->

<Operation Class="PatchOperationConditional">
	<xpath>Defs/ThingDef[defName="Leather_Plain"]/comps</xpath>
	<nomatch Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Leather_Plain"]</xpath>
		<value>
			<comps/>
		</value>
	</nomatch>
</Operation>
<Operation Class="PatchOperationAdd">
	<xpath>Defs/ThingDef[defName="Leather_Plain"]/comps</xpath>
	<value>
		<li Class="ColoredLeatherAndWool.CompProperties_TanningColor">
			<baseColor>(162,106,57)</baseColor>
			<weight>0.4</weight>
		</li>
	</value>
</Operation>

